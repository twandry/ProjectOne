<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/MyStyleSheet.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="topnav">
        <a href="@Url.Action("Index", "Home")" class="w3-bar-item w3-button">Home</a>

        <a href="@Url.Action("AboutUs", "Home")" class="w3-bar-item w3-button">About</a>

        <a href="@Url.Action("Contact", "Home")" class="w3-bar-item w3-button">Contact</a>

        <a href="@Url.Action("Index", "Mission")" class="w3-bar-item w3-button">Mission</a>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>